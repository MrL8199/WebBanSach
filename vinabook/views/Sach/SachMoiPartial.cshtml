@using Vinabook.Models;
@*Định nghĩa kiểu dữ liệu cho biến Model*@
@model List<Sach>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="latest-product">
                <h2 class="section-title">Latest Products</h2>
                <div class="product-carousel">
                    @foreach(var item in Model)
                    { 
                    <div class="single-product">
                        <div class="product-f-image">
                            <img src="@Url.Content("~/Content/HinhAnhSP/"+item.AnhBia)" @*src="~/Content/UserLayout/img/product-1.jpg"*@ alt="" />
                            <div class="product-hover">

                                <a href="#" class="add-to-cart-link" style="padding:0">

                                    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSach = item.MaSach, @strUrl = Request.Url.ToString() }))
                                    {
                                        @*<span class="fa fa-shopping-cart "></span>*@
                                        <input type="submit" style="width:100%;height:100%" class="btn btn-primary" value="Thêm vào giỏ" id="btnGioHang" />
                                    }
                                </a>

                                <a href="@Url.Action("XemChiTiet", new { @masach=item.MaSach })" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                            </div>
                        </div>

                        <h2><a href="@Url.Action("XemChiTiet", new { @masach=item.MaSach })">@item.TenSach</a></h2>

                        <div class="product-carousel-price">
                            <ins>@string.Format("{0:0,0}", item.GiaBan) VNĐ</ins> <del>@string.Format("{0:0,0}", item.GiaBan + (10*item.GiaBan/100))</del>
                        </div>
                    </div>
                    }
                
                </div>
            </div>
        </div>
    </div>
</div>